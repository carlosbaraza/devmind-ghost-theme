{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<header class="main-header with-cover" style="background-color: #4987B5; background-image: url({{asset "img/cover.svg"}})">
    <div class="cover">
      <!-- <img data-src="{{asset "img/cover.svg"}}" alt="Cover image" /> -->
    </div>
    <nav class="main-nav overlay clearfix">
        <a class="blog-logo" href="{{@blog.url}}"><img src="{{asset "img/logo.svg"}}" alt="Blog Logo" /></a>
        {{#if @blog.navigation}}
            <a class="menu-button" href="#"><span class="burger">&#9776;</span><span class="word">Menu</span></a>
        {{/if}}
    </nav>
    <div class="vertical">
        <div class="main-header-content inner">
            <div class="logo-carlosbaraza">
              <img data-src="{{asset "img/logo_carlosbaraza.svg"}}" alt="Carlos Baraza Logo" style="opacity: 0" />
            </div>
            <h1 class="page-title">{{@blog.title}}</h1>
            <h2 class="page-description">{{@blog.description}}</h2>
            <div class="social-icons">
              <a href="https://github.com/carlosbaraza">
                <span class="socicon socicon-github"></span>
              </a>
              <a href="https://www.flickr.com/photos/carlosbaraza/">
                <span class="socicon socicon-flickr"></span>
              </a>
              <a href="https://twitter.com/carlosbaraza">
                <span class="socicon socicon-twitter"></span>
              </a>
              <a href="mailto:me@carlosbaraza.com">
                <span class="socicon socicon-mail"></span>
              </a>
              <a href="/rss">
                <span class="socicon socicon-rss"></span>
              </a>
              <a href="https://instagram.com/carlos.baraza/">
                <span class="socicon socicon-instagram"></span>
              </a>
              <a href="skype:carlosbaraza?call">
                <span class="socicon socicon-skype"></span>
              </a>
              <a href="https://ie.linkedin.com/pub/carlos-baraza-haro/40/46/2b/en">
                <span class="socicon socicon-linkedin"></span>
              </a>
            </div>
        </div>
    </div>
    <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
</header>

{{! The main content area on the homepage }}
<main id="content" class="content" role="main">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}

</main>
